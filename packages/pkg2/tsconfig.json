{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2015",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "pkg1": ["../pkg1/src/pkg1"],
      "pkg2": ["./src/pkg2"],
      "pkg3": ["../pkg3/src/pkg3"]
    }
  },
  "include": ["./src"]
}
