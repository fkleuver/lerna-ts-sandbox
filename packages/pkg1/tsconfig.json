{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "pkg1": ["./src/pkg1"],
      "pkg2": ["../pkg2/src/pkg2"],
      "pkg3": ["../pkg2/src/pkg3"]
    }
  }
}
